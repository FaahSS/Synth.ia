package beans;

public class QuestaoDissertativa {
	private int codigo;
	private Peso codigoNivel;
	private String questao;
	private String gabarito;
	
	//GetAll
	public String getAll() {
		return "Código.........: "+codigo+"\n"+
		       "Código do Nível: "+codigoNivel+"\n"+
			   "Questão........: "+questao+"\n"+
		       "Gabarito.......: "+gabarito;
	}
	//SetAll
	public void setAll(int codigo, Peso codigoNivel, String questao, String gabarito) {
		setCodigo(codigo);
		setCodigoNivel(codigoNivel);
		setQuestao(questao);
		setGabarito(gabarito);
	}
	
	//Construtores
	public QuestaoDissertativa() {
		super();
	}
	public QuestaoDissertativa(int codigo, Peso codigoNivel, String questao, String gabarito) {
		super();
		setCodigo(codigo);
		setCodigoNivel(codigoNivel);
		setQuestao(questao);
		setGabarito(gabarito);
	}
	//Getters & Setters
	public int getCodigo() {
		return codigo;
	}
	public void setCodigo(int codigo) {
		this.codigo = codigo;
	}
	public Peso getCodigoNivel() {
		return codigoNivel;
	}
	public void setCodigoNivel(Peso codigoNivel) {
		this.codigoNivel = codigoNivel;
	}
	public String getQuestao() {
		return questao;
	}
	public void setQuestao(String questao) {
		this.questao = questao;
	}
	public String getGabarito() {
		return gabarito;
	}
	public void setGabarito(String gabarito) {
		this.gabarito = gabarito;
	}
	
	
}
