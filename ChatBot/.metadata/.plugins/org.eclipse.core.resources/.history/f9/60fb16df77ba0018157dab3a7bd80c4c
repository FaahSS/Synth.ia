package beans;

public class Alternativa {
	private int codigoAlternativa;
	private Questao codigoQuestao;
	private String descricao;
	
	//GetAll
	public String getAll() {
		return "Código: "+codigoAlternativa+"\n"+
			   "Questão: "+codigoQuestao+"\n"+
				"Descrição: "+descricao;
	}
	
	//SetAll
	public void setAll(int codigoAlternativa, Questao codigoQuestao, String descricao) {
		setCodigoAlternativa(codigoAlternativa);
		setCodigoQuestao(codigoQuestao);
		setDescricao(descricao);
	}
	//Construtores
	
	public Alternativa() {
		super();
	}
	public Alternativa(int codigoAlternativa, Questao codigoQuestao, String descricao) {
		super();
		setCodigoAlternativa(codigoAlternativa);
		setCodigoQuestao(codigoQuestao);
		setDescricao(descricao);
	}
	//Getters & Setters
	public int getCodigoAlternativa() {
		return codigoAlternativa;
	}
	public void setCodigoAlternativa(int codigoAlternativa) {
		this.codigoAlternativa = codigoAlternativa;
	}
	public Questao getCodigoQuestao() {
		return codigoQuestao;
	}
	public void setCodigoQuestao(Questao codigoQuestao) {
		this.codigoQuestao = codigoQuestao;
	}
	public String getDescricao() {
		return descricao;
	}
	public void setDescricao(String descricao) {
		this.descricao = descricao;
	}
	
	
	

}
