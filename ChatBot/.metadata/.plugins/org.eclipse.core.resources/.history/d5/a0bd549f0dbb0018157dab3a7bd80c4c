package beans;

public class Questao {
	private int codigo;
	private int tipo;
	private Peso peso;
	private String enunciado;
	private String gabarito;
	private String alternativa;
	
	//getAll
	public String getAll() {
		return "Código.....: "+codigo+"\n"+
				"Tipo......: "+tipo+"\n"+
				"Peso......: "+peso+"\n"+
				"Enunciado.: "+enunciado+"\n"+
				"Gabarito..: "+gabarito+"\n"+
				"Alternativa: "+alternativa;
	}
	
	//SetAll
	public void setAll(int codigo, int tipo, Peso peso, String enunciado, String gabarito, String alternativa) {
		setCodigo(codigo);
		setTipo(tipo);
		setPeso(peso);
		setEnunciado(enunciado);
		setGabarito(gabarito);
		setAlternativa(alternativa);
	}
	//Construtores
	public Questao() {
		super();
	}
	public Questao(int codigo, int tipo, Peso peso, String enunciado, String gabarito, String alternativa) {
		super();
		setCodigo(codigo);
		setTipo(tipo);
		setPeso(peso);
		setEnunciado(enunciado);
		setGabarito(gabarito);
		setAlternativa(alternativa);
	}
	//Getters & Setters
	public int getCodigo() {
		return codigo;
	}
	public void setCodigo(int codigo) {
		this.codigo = codigo;
	}
	public int getTipo() {
		return tipo;
	}
	public void setTipo(int tipo) {
		this.tipo = tipo;
	}
	public Peso getPeso() {
		return peso;
	}
	public void setPeso(Peso peso) {
		this.peso = peso;
	}
	public String getEnunciado() {
		return enunciado;
	}
	public void setEnunciado(String enunciado) {
		this.enunciado = enunciado;
	}
	public String getGabarito() {
		return gabarito;
	}
	public void setGabarito(String gabarito) {
		this.gabarito = gabarito;
	}
	public String getAlternativa() {
		return alternativa;
	}
	public void setAlternativa(String alternativa) {
		this.alternativa = alternativa;
	}
	
	
	

}
